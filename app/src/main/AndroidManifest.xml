<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <application
        android:name="com.example.foodorderapp.ControllerApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOrderApp"
        tools:targetApi="31">
        <activity android:name="com.example.foodorderapp.activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.foodorderapp.activity.MainActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.SignInActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.SignUpActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.AdminMainActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.ChangePasswordActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.ForgotPasswordActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.FoodDetailActivity"
            android:exported="false"/>
        <activity
            android:name="com.example.foodorderapp.activity.AddFoodActivity"
            android:exported="false"/>
        <activity android:name="com.example.foodorderapp.activity.OrderHistoryActivity" />
        <activity android:name="com.example.foodorderapp.activity.AdminReportActivity" />
        <activity android:name="com.example.foodorderapp.activity.AddNewAdminActivity" />
    </application>

</manifest>